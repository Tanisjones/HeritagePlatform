# Docker Compose environment (example)

# Database
POSTGRES_DB=heritage_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Django
SECRET_KEY=change-me
ALLOWED_HOSTS=localhost,127.0.0.1,frontend
CORS_ALLOWED_ORIGINS=http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost:8080

# Auto-created admin user (no interaction)
CREATE_SUPERUSER=true
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin1234
DJANGO_SUPERUSER_USERNAME=admin

# Seed the full heritage dataset on start (skips if data already exists)
SEED_HERITAGE_DATA=true

# Force reseed (dangerous: wipes the tables used by the seed)
SEED_HERITAGE_RESET=false

# Avoid downloading remote media during seed (uses dummy media instead)
SEED_HERITAGE_SKIP_MEDIA_DOWNLOADS=false

# Optional: additional demo seed (creates sample heritage items + routes)
SEED_DEMO_DATA=false

# Frontend build-time API base (served via nginx)
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Optional (AI profile): model to preload into the local Ollama container.
OLLAMA_MODEL=llama3.2:1b

# Optional: override the AI config file path inside the backend container.
# AI_CONFIG_PATH=/app/backend/config/ai.yaml
